<html>
    <head>
        
    </head>
    
    <body>
        <form method="POST" action="/todo/add" >
       <div>
           <label>Title: </label>
           <input type="text" name="title" placeholder="Add title to do">
       </div> 
        <div>
            <label>Description</label>
            <textarea name="description" placeholder="Put  descripton here!!"></textarea>
        </div>
        <button type="submit">Submit</button>
        </form>

        <ul>
            <% docs.map((doc) => { %>
                <li> <%= doc.title %> - <%= doc.description %></li>
                <a href="/todo/<%= doc._id %>">Show</a>
                <a href="/todo/edit/<%= doc._id %>">Edit</a>
                <a href="/todo/delete/<%= doc._id %>">Delete</a>
            <% }); %>
        </ul>
    </body>
</html>